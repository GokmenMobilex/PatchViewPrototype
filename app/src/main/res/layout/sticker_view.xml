<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_first_circle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/first_circle"
        android:padding="1dp"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/rounded_imageview_shape"
        app:srcCompat="@drawable/ic_sunny_24"
        app:strokeColor="@color/gray_overlay"
        app:strokeWidth="1dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_second_circle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="40dp"
        android:contentDescription="@string/second_circle"
        android:padding="1dp"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/rounded_imageview_shape"
        app:srcCompat="@drawable/ic_cloudy_24"
        app:strokeColor="@color/gray_overlay"
        app:strokeWidth="1dp" />
</FrameLayout>